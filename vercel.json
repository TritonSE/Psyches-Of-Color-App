{
    "version": 2,
    "devCommand": "npm --prefix frontend run dev",
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { "src": "backend/src/server.ts", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/src/server.ts" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  